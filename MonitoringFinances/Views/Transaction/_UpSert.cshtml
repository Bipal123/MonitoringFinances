@model MonitoringFinances.Models.ViewModel.TransactionSingleVM

<form method="post" asp-controller="Transaction" asp-action="UpSert" id="UpSertTransactionForm">
    @if (Model.Transaction.Id != 0)
    {
        <input type="hidden" asp-for="Transaction.Id" />
    }
    <div class="row mb-3">
        <label asp-for="Transaction.Amount" class="col-sm-2 col-form-label me-sm-3">Amount</label>
        <div class="col-sm-9">
            <input asp-for="Transaction.Amount" class="form-control" id="Name" aria-describedby="Name">
            <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Transaction.Date" class="col-sm-2 col-form-label me-sm-3">Date</label>
        <div class="col-sm-9">
            <input asp-for="Transaction.Date" class="form-control" id="Name" aria-describedby="Name">
            <span asp-validation-for="Transaction.Date" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Transaction.Description" class="col-sm-2 col-form-label me-sm-3">Description<br />(optional)</label>
        <div class="col-sm-9">
            <textarea asp-for="Transaction.Description" class="form-control" id="Name" aria-describedby="Name"></textarea>
        </div>
    </div>
    <div class="row mb-3">
        <label asp-for="Transaction.CategoryId" class="col-sm-2 col-form-label me-sm-3"></label>
        <div class="col-sm-9">
            <select asp-for="Transaction.CategoryId" asp-items="@Model.SubCategories" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="Transaction.CategoryId" class="text-danger"></span>
        </div>
    </div>
</form>

<!--Required Scripts and Stuff-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>