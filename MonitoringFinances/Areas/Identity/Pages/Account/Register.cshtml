@page
@using MonitoringFinances
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!-- Vendor CSS-->
<link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
<link href="~/css/Register.css" rel="stylesheet" media="all">

@section OutsideContainer {
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Registration Form</h2>
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Input.FirstName" class="label"></label>
                                    <input asp-for="Input.FirstName" class="input--style-4" type="text">
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Input.LastName" class="label"></label>
                                    <input asp-for="Input.LastName" class="input--style-4" type="text">
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <label asp-for="Input.Email" class="label"></label>
                            <input asp-for="Input.Email" class="input--style-4" type="text">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Input.Password" class="label"></label>
                                    <input asp-for="Input.Password" class="input--style-4" type="password">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="Input.ConfirmPassword" class="label"></label>
                                    <input asp-for="Input.ConfirmPassword" class="input--style-4" type="password">
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        @if (User.IsInRole(WebConstant.AdminRole))
                        {
                            <div class="row">
                                <div class="row">
                                    <label asp-for="Input.AssignedRole" class="label"></label>
                                </div>
                                <div class="row">
                                    <select asp-for="Input.AssignedRole" asp-items="@Model.AllRoles" required>
                                        <option disabled selected>--Select Role--</option>
                                    </select>
                                    <div class="select-dropdown"></div>
                                </div>
                                <div class="row">
                                    <span asp-validation-for="Input.AssignedRole" class="text-danger"></span>
                                </div>
                            </div>
                        }
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn-success" type="submit">Register</button>
                        </div>
                        <p class="mt-3">
                            <a asp-page="./Login">Already have an account?</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
