@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!-- Vendor CSS-->
<link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
<link href="~/css/Register.css" rel="stylesheet" media="all">

@section OutsideContainer {
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <h2 class="title">Login</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group">
                            <label asp-for="Input.Email" class="label"></label>
                            <input asp-for="Input.Email" class="input--style-4" type="text">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="input-group">
                            <label asp-for="Input.Password" class="label"></label>
                            <input asp-for="Input.Password" class="input--style-4">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberme">
                            <label asp-for="Input.RememberMe" class="form-check-label" for="rememberme">
                                Remember me?
                            </label>
                        </div>
                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Login</button>
                        </div>
                        <p class="mt-3">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
